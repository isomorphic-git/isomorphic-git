{
  "include": ["__tests__","packages/isomorphic-git/**/*"],
  "references": [
    { "path": "./packages/isomorphic-git/jsconfig.json" },
  ],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "maxNodeModuleJsDepth": 1,
    "strictNullChecks": true,
    "noEmit": true,
    "allowJs": true,
    "checkJs": false,
    "moduleResolution": "node",
    "target": "esnext",
    "module": "esnext",
    "lib": ["ESNext", "dom"],
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,
    "baseUrl": "."
  }
}
