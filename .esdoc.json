{
  "source": "./src",
  "destination": "./doc",
  "plugins": [
    {
      "name": "esdoc-standard-plugin",
      "option": {
        "test": {
          "source": "./__tests__/",
          "interfaces": [
            "describe",
            "test"
          ],
          "includes": [
            "^test-(.*)\\.js$"
          ]
        },
        "brand": {
          "title": "isomorphic-git",
          "description": "A pure JavaScript implementation of git for node and browsers",
          "site": "https://isomorphic-git.github.io/isomorphic-git",
          "author": "https://twitter.com/wmhilton"
        }
      }
    },
    {
      "name": "esdoc-ecmascript-proposal-plugin",
      "option": {
        "all": true
      }
    },
    {
      "name": "esdoc-importpath-plugin",
      "option": {
        "stripPackageName": true,
        "replaces": [
          {
            "from": ".*",
            "to": "isomorphic-git"
          }
        ]
      }
    },
    {
      "name": "esdoc-inject-script-plugin",
      "option": {
        "scripts": [
          "./assets/gitter.js",
          "./assets/sidecar.v1.js"
        ]
      }
    }
  ]
}